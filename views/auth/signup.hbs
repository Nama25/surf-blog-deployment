<h1>Sign Up!</h1>
{{!-- views/auth/signup.hbs --}}

<div id="form">
    <h2>Signup</h2>
    <form class="needs-validation"action="/signup" method="POST">

        <label  class="form-label"> Username
            <input class="form-control" id="validationDefault03" type="text" name="username" placeholder="Type your username" required/>
        </label>

        <label> Email
            <input class="form-control" type="email" name="email" placeholder="email@email.com" />
        </label>

        <label> Password
            <input class="form-control" type="password" name="password" placeholder="********" />
        </label>

        <button type="submit">Create surfer account</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}

    </form>
</div>
