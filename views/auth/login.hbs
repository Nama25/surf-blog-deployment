<h1>Login</h1>

<div id="form"> 
  <form action="/login" method="POST">
 
    <label> Email
      <input type="email" name="email" placeholder="Your e-mail" />
    </label>
 
    <label>Password
      <input type="password" name="password" placeholder="********" />
    </label>
 
    <button type="submit" class="loginBtn">Login</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>


