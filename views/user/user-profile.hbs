{{#if result.surfLevel}}
  <h2>Hi {{user.username}}!</h2>
  <p>This is your profile page!</p>
{{else}}
  <br /><p>Still no logged in user, sorry!</p>

{{/if}}

<img src="{{result.imageUrl}}" alt="" />
<p>Surf Level: {{result.surfLevel}}</p>
<p>Type of Surfing: {{result.typeOfSurfing}}</p>
<p>Favorite Spots: {{result.favoriteSpots}}</p>
<p>{{result.createdAt}}</p>
<p>{{result.updatedAt}}</p>
<a href="/user/profile/edit/{{result._id}}"><i class="fa-solid fa-pen-to-square icons"></i></a>


<p>My Posts:</p>
  {{#each result.surfSpot}}
  <div class="card">
      <img src="{{imageUrl}}"></img>
    <div class="card-body"></div>
      <h6 class="card-title">{{beachName}}</h6>
    {{!-- {{#if canEdit}} --}}
      <a href="/surf-spot/profile/edit/{{_id}}"><i class="fa-solid fa-pen-to-square icons" title="Edit"></i></a>
      <form action="/surf-spot/all/delete/{{_id}}" method="POST">
        <button class="icons"><i class="fa-solid fa-trash-can icons" title="Delete"></i></button>
      </form>
    </div>
  {{!-- {{/if}} --}}
  </div>
  {{/each}}

{{! change to edit icon }}
