<h1>Surf spot profile</h1>

{{!-- Image of beach --}}
{{!-- <img src="" alt=""> --}}

<div id="surfSpot">
<img src="{{result.imageUrl}}" alt="">
    <p>
        Name of the beach: {{result.beachName}}
    </p>

    <p>
        Country: {{result.country}}
    </p>

    <p>
        Google Map Link: {{result.mapLink}}
    </p>

    <p>
        Surf Level: {{result.skillLevel}}
    </p>

    <p>
        Surf Spot Description: {{result.spotDescription}}
    </p>

    <p>
        Accessibility: {{result.accessibility}}
    </p>

    <p>
        Amenities: {{result.amenities}}
    </p>

    <p>
        Food: {{result.foodSpots}}
    </p>

    <p>
        Rating: {{result.rating}}
    </p>

    <p>Type of Surfing: {{result.typeOfSurfing}}</p>

    <p>{{result.createdAt}}</p>
    <p>{{result.updatedAt}}</p>

    <p>Surfer: {{user.username}}</p>

<a href="/surf-spot/profile/edit/{{result._id}}"><i class="fa-solid fa-pen-to-square icons" title="Edit"></i></a>

{{!-- <form action="/profile/delete/{{result._id}}" method="POST">
    <a href="/all">Delete</a>
</form> --}}

<form action="/surf-spot/profile/delete/{{result._id}}" method="POST">
    <button class="icons" title="Delete"><i class="fa-solid fa-trash-can"></i></i></button>
</form>

{{#unless comments}}
<p>No comments yet!</p>
{{/unless}}

{{#each comments}}
<p>{{result._id}}</p>
{{/each}}

{{#each comments}}
<p>{{userObj._id}}</p>
{{/each}}

{{#each comments}}
<p>{{surfObj._id}}</p>
{{/each}}

{{#each comments}}
<p>{{comments.commentText}}</p>
{{/each}}

{{#each comments}}
<p>{{this.commentText}}</p>
{{/each}}

<hr>

<h3>Add comment</h3>

{{!-- comment/ --}}
<form action="/surf-spot/profile/{{result._id}}" method="POST">
    <label> Your username:
        <input type="text" name="user" />
    </label>

    <input type="text" name="postAuthor" value="{{user.username}}" hidden />
    <textarea name="commentText" cols="30" rows="2"></textarea>

    <button type="submit">Comment</button>
</form>

