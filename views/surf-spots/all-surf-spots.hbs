<form class="filter-panel" action="/surf-spot/all" method="GET">
  <a href="/surf-spot/all" class="filterBtns">All Spots</a>
  <a href="/surf-spot/all-beginner" class="filterBtns">Beginner</a>
  <a href="/surf-spot/all-intermediate" class="filterBtns">Intermediate</a>
  <a href="/surf-spot/all-advanced" class="filterBtns">Advanced</a>
</form>

<div class="allSurfSpots">

  {{#each allResults}}

    <a href="/surf-spot/profile/{{this._id}}">

      <div class="card text-center">
        <img src="{{imageUrl}}" class="card-img-top" alt="" />
        <div class="card-body">

          <h6 class="card-title">{{beachName}}</h5>

          <h6 class="card-subtitle mb-2">{{country}}</h6>

          <p class="card-text">{{skillLevel}}</p>

          {{#if canEdit}}
            <div class="editIcons"> 
              <a href="/surf-spot/profile/edit/{{_id}}"><i
                  class="fa-solid fa-pen-to-square icons"
                  title="Edit"
                ></i></a>

              <form action="/surf-spot/all/delete/{{_id}}" method="POST">
                <button class="icons"><i
                    class="fa-solid fa-trash-can"
                    title="Delete"
                  ></i></button>
              </form>

            </div> 
          {{/if}}
        </div>
      </div>

    </a>

  {{/each}}

</div>
